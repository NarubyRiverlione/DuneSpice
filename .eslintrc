{
  "extends": [
    "eslint:recommended",
  ],
  "parserOptions": {},
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 120,
        "comments": 150
      }
    ],
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      0
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-mixed-spaces-and-tabs": [
      "warn",
      "smart-tabs"
    ],
    "no-console": [
      "off"
    ],
  }
}